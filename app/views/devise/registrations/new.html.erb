<div class="container">
  <div class="row">
    <div class= "col-md-4"></div>
    <div class="col-md-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
        </div>

        <div class="field">
          <label>Register as</label><br>
            <%= radio_button_tag :register_as, 'user' %>User
            <%= radio_button_tag :register_as, 'doctor', checked: true %> Doctor
        </div>

        <div class="doctorDetails">
          <div class="field">
            <%= f.label :hospital_name %>
            <%= f.text_field :hospital_name, class: 'form-control'%>
          </div>

          <div class="field">
            <%= f.label :hospital_address %>
            <%= f.text_area :hospital_address, class: 'form-control', cols: 10, rows: 3 %>
          </div>

          <div class="field">
            <%= f.label :hospital_mobile_number %>
            <%= f.number_field :hospital_mobile_number, class: 'form-control' %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
        </div>

        <div class="actions form-group mt-1">
          <%= f.submit "Sign up", class: 'btn btn-success btn-signup', data: { disable_with: false } %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>